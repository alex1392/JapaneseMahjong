<Window x:Class="JapaneseMahjong.MainWindow"
				xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
				xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
				xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
				xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
				xmlns:local="clr-namespace:JapaneseMahjong"
				xmlns:controls="clr-namespace:JapaneseMahjong.Controls"
				xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
				mc:Ignorable="d"
				Title="MainWindow"
				Height="450"
				Width="800"
				x:Name="mainWindow">
	<DockPanel DataContext="{Binding ElementName=mainWindow}">
		<DockPanel.Resources>
			<CollectionViewSource x:Key="MainHandViewSourece"
														Source="{Binding Game.Players[0].Hand}">
				<CollectionViewSource.SortDescriptions>
					<scm:SortDescription PropertyName="SortCode" />
				</CollectionViewSource.SortDescriptions>
			</CollectionViewSource>
			<DataTemplate x:Key="TileTemplate" 
										DataType="{x:Type local:Tile}">
				<controls:TileControl Tile="{Binding }"
															Margin="2" />
			</DataTemplate>
		</DockPanel.Resources>
		<!--<controls:TileSet Margin="0,0,0,65" />-->
		<StackPanel DockPanel.Dock="Bottom"
								Orientation="Horizontal">
			<ItemsControl Height="60"
										ItemsSource="{Binding Source={StaticResource MainHandViewSourece}}"
										ItemTemplate="{StaticResource TileTemplate}">
				<ItemsControl.ItemsPanel>
					<ItemsPanelTemplate>
						<StackPanel Orientation="Horizontal" />
					</ItemsPanelTemplate>
				</ItemsControl.ItemsPanel>
				<ItemsControl.Resources>
					<Style TargetType="controls:TileControl">
						<EventSetter Event="MouseDoubleClick"
												 Handler="DiscardTileFromHand" />
					</Style>
				</ItemsControl.Resources>
			</ItemsControl>
			<controls:TileControl Tile="{Binding Game.Players[0].DrawedTile}"
														Height="60"
														Margin="20,0"
														MouseDoubleClick="DiscardTileFromDraw"/>
		</StackPanel>
		
		<ItemsControl DockPanel.Dock="Bottom" 
									ItemsSource="{Binding Game.Players[0].River}"
									ItemTemplate="{StaticResource TileTemplate}">
			<ItemsControl.ItemsPanel>
				<ItemsPanelTemplate>
					<WrapPanel Orientation="Horizontal"
										 ItemHeight="50" />
				</ItemsPanelTemplate>
			</ItemsControl.ItemsPanel>
		</ItemsControl>
		<ItemsControl ItemsSource="{Binding Game.Wall}"
									ItemTemplate="{StaticResource TileTemplate}">
			<ItemsControl.ItemsPanel>
				<ItemsPanelTemplate>
					<WrapPanel Orientation="Horizontal"
										 ItemHeight="50" />
				</ItemsPanelTemplate>
			</ItemsControl.ItemsPanel>
		</ItemsControl>
	</DockPanel>
</Window>
